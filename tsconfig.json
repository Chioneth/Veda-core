{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": true,
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": ["node_modules"]
}
